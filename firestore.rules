rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users can only read and write their own prescriptions
    match /users/{userId}/prescriptions/{prescriptionId} {
      // Allow read if user is authenticated and owns the prescription
      allow read: if isOwner(userId);
      
      // Allow create if user is authenticated and owns the prescription
      allow create: if isOwner(userId) 
        && request.resource.data.keys().hasAll(['name', 'packSize', 'dailyDose', 'startDate', 'startSupply', 'supplyLog', 'createdAt', 'photoUrls'])
        && request.resource.data.name is string
        && request.resource.data.packSize is int
        && request.resource.data.dailyDose is number
        && request.resource.data.startDate is timestamp
        && request.resource.data.startSupply is int
        && request.resource.data.supplyLog is list
        && request.resource.data.createdAt is timestamp
        && request.resource.data.photoUrls is list
        && request.resource.data.photoUrls.size() <= 5
        && (!('categoryId' in request.resource.data) || request.resource.data.categoryId is string)
        && (!('notes' in request.resource.data) || request.resource.data.notes is string)
        && (!('emailThresholds' in request.resource.data) || (request.resource.data.emailThresholds is list && request.resource.data.emailThresholds.size() <= 10 && request.resource.data.emailThresholds.size() > 0));
      
      // Allow update if user is authenticated and owns the prescription
      // Allow updating the supplyLog, photoUrls, categoryId, and notes fields
      allow update: if isOwner(userId)
        && (
          (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['supplyLog'])
            && request.resource.data.supplyLog is list)
          || (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['photoUrls'])
            && request.resource.data.photoUrls is list
            && request.resource.data.photoUrls.size() <= 5)
          || (request.resource.data.diff(resource.data).affectedKeys().hasAll(['supplyLog', 'photoUrls'])
            && request.resource.data.supplyLog is list
            && request.resource.data.photoUrls is list
            && request.resource.data.photoUrls.size() <= 5)
          || (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['categoryId'])
            && (!('categoryId' in request.resource.data) || request.resource.data.categoryId is string))
          || (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['notes'])
            && (!('notes' in request.resource.data) || request.resource.data.notes is string))
          || (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['emailThresholds'])
            && (!('emailThresholds' in request.resource.data) || (request.resource.data.emailThresholds is list && request.resource.data.emailThresholds.size() <= 10 && request.resource.data.emailThresholds.size() > 0)))
        );
      
      // Allow delete if user is authenticated and owns the prescription
      allow delete: if isOwner(userId);
    }
    
    // Users can only read and write their own categories
    match /users/{userId}/categories/{categoryId} {
      // Allow read if user is authenticated and owns the category
      allow read: if isOwner(userId);
      
      // Allow create if user is authenticated and owns the category
      allow create: if isOwner(userId)
        && request.resource.data.keys().hasAll(['name', 'color', 'createdAt'])
        && request.resource.data.name is string
        && request.resource.data.color is string
        && request.resource.data.createdAt is timestamp;
      
      // Allow update if user is authenticated and owns the category
      allow update: if isOwner(userId)
        && (
          (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['name'])
            && request.resource.data.name is string)
          || (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['color'])
            && request.resource.data.color is string)
          || (request.resource.data.diff(resource.data).affectedKeys().hasAll(['name', 'color'])
            && request.resource.data.name is string
            && request.resource.data.color is string)
        );
      
      // Allow delete if user is authenticated and owns the category
      allow delete: if isOwner(userId);
    }
    
    // User settings
    match /users/{userId}/settings/{settingsId} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId);
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

