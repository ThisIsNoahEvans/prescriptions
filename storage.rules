rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Prescription photos: users can only access their own photos
    match /prescriptions/{userId}/{prescriptionId}/{fileName} {
      // Allow read if user is authenticated and owns the photo
      allow read: if isOwner(userId);
      
      // Allow write (upload) if user is authenticated and owns the photo
      // File must be an image and less than 5MB
      allow write: if isOwner(userId)
        && request.resource.size < 5 * 1024 * 1024 // 5MB
        && request.resource.contentType.matches('image/.*');
      
      // Allow delete if user is authenticated and owns the photo
      allow delete: if isOwner(userId);
    }
    
    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

